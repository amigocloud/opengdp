function print_res {
    local maxResolution=156543.0339
    local zoom
    for (( zoom=0; zoom<=24; ++zoom ))
    do
        fcalc "$maxResolution / 2^${zoom}"
    done
}

function dotc {

    echo "" > "${basedir}/${dsname}.tilecache.conf"
    
    local res=$(print_res | tr "\n" "," | sed -r 's/,$//')

    ##### loop over the layers in the index #####
    
    IFS="|"
    local lid
    local ts
    local lname
    local extent
    local gextent
    while read lid junk ts lname extent gextent
    do
        unset IFS
        
        local gw
        local gs
        local ge
        local gn
        read gw gs ge gn <<<"$gextent"
        
        local w
        local s
        local e
        local n
        read w s e n <<<"$extent"
	    
	    IFS="|"
        if fcmp "$n < 86" && fcmp "$s > -86"
        then
            
            cat << EOF >> ${basedir}/${dsname}.tilecache.conf

[${project}_${lname}]
type=WMS
url=${urlcgibin}?
layers=${lname}
extension=png
tms_type=google
levels=24
spherical_mercator=true
resolutions=${res}
bbox=${gw},${gs},${ge},${gn}
EOF

        else    
            cat << EOF >> ${basedir}/${dsname}.tilecache.conf

[${project}_${lname}]
type=WMS
url=${urlcgibin}?
layers=${layer}
extension=png
tms_type=google
levels=24
spherical_mercator=true
EOF
       fi



    done < <(index_get_layers)

}
